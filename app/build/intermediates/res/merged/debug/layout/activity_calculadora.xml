<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculadora"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#303F9F"
    tools:context="usuario.app.calculadora.CalculadoraActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        tools:text="Digite o primeiro número"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#fff"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/ednumero1"
        android:textColor="#283593"
        android:background="#C5CAE9"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ednumero1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/textView2"
        tools:text="Digite o segundo número"
        android:textColor="#fff"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/ednumero2"
        android:textColor="#283593"
        android:background="#C5CAE9"/>

    <Button
        android:text="Somar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btsubtrair"
        android:id="@+id/btsomar"
        android:textColor="#283593"
        android:background="#F9A825"
        android:layout_marginBottom="16dp"/>

    <Button
        android:text="Dividir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btdividir"
        android:background="#4DD0E1"
        android:textColor="#283593"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"/>

    <Button
        android:text="Multiplicar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btmultiplicar"
        android:background="#689F38"
        android:textColor="#283593"
        android:layout_above="@+id/btdividir"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="Subtrair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btsubtrair"
        android:background="#C62828"
        android:textColor="#283593"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/btmultiplicar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
